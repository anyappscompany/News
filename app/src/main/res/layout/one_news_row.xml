<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/one_news_row_bg"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvArtTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="TextView"
        android:textAppearance="@style/oneNewsRowTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvNewsDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="2dp"
        android:text="TextView"
        android:textAppearance="@style/oneNewsRowDate"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvArtTitle" />

    <ImageView
        android:id="@+id/ivArtImage"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvNewsDate"
        app:srcCompat="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/tvQuery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="TextView"
        android:textAppearance="@style/oneNewsRowQuery"
        app:layout_constraintStart_toEndOf="@+id/ivArtImage"
        app:layout_constraintTop_toTopOf="@+id/ivArtImage" />

    <TextView
        android:id="@+id/tvArtSnippet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="2dp"
        android:text="TextView"
        android:textAppearance="@style/oneNewsRowArtSnippet"
        app:layout_constraintStart_toEndOf="@+id/ivArtImage"
        app:layout_constraintTop_toBottomOf="@+id/tvQuery" />

    <TextView
        android:id="@+id/tvArtSource"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="2dp"
        android:text="TextView"
        android:textAppearance="@style/oneNewsRowArtSource"
        app:layout_constraintStart_toEndOf="@+id/ivArtImage"
        app:layout_constraintTop_toBottomOf="@+id/tvArtSnippet" />
</androidx.constraintlayout.widget.ConstraintLayout>