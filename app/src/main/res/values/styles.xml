<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#8D99AE</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="oneNewsRowTitle" parent="android:Widget.TextView">
        <item name="android:textColor">#2B2D42</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">12dp</item>
    </style>
    <style name="oneNewsRowDate" parent="android:Widget.TextView">
        <item name="android:textColor">#8D99AE</item>
        <item name="android:textSize">8dp</item>
    </style>
    <style name="oneNewsRowArtSnippet" parent="android:Widget.TextView">
        <item name="android:textColor">#2B2D42</item>
        <item name="android:textSize">9dp</item>
    </style>
    <style name="oneNewsRowArtSource" parent="android:Widget.TextView">
        <item name="android:textColor">#70C1B3</item>
        <item name="android:textSize">8dp</item>
    </style>
    <style name="oneNewsRowQuery" parent="android:Widget.TextView">
        <item name="android:textColor">#2B2D42</item>
        <item name="android:textSize">9dp</item>
    </style>
</resources>
